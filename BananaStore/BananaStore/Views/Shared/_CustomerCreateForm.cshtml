@model BananaStore.Models.CustomersViewModel

<div class="border border-warning p-5 m-3">
    <h3>Create a New Customer</h3>
    @*CSRF Protection Automatically Applied*@

    @if (!ViewData.ModelState.IsValid)
    {

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="User_FirstName" class="control-label"></label>
                    <input asp-for="User_FirstName" class="form-control" placeholder="First Name" data-val="true" data-val-required="This field is required." />
                    <span asp-validation-for="User_FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User_LastName" class="control-label"></label>
                    <input asp-for="User_LastName" class="form-control" class="form-control" place-holer="Last Name" data-val="true" data-val-required="This field is required." />
                    <span asp-validation-for="User_LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
        </form>

    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

