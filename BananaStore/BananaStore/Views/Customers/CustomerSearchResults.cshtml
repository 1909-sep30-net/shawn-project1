@model IEnumerable<BananaStore.Models.CustomersViewModel>

@{
    ViewData["Title"] = "Customer Search Results";
}
<h1 class="text-center">Customer Search Results</h1>

@if (Model.Count() == 0)
{
    
    <div class="p-3 w-100 vh-100 d-flex flex-column align-items-center justify-content-start">
        <h2>Nothing found</h2>
        <h4 class="text-muted"><em>Try again or create a new customer.</em></h4>
        @Html.Partial("../Shared/_CustomerCreateForm.cshtml")
        @Html.Partial("../Shared/_CustomerSearchForm.cshtml")
    </div>

}
else if (Model.Count() != 0)
{


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Continue With Order", "ChooseLocation", "Orders", new { customerId = Model.First().CustomerId }, null)  |
                        @Html.ActionLink("View Order History", "History", "Orders", new { customerId = Model.First().CustomerId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
